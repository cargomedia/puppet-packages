#!/bin/bash

### BEGIN INIT INFO
# Provides:           <%= @name %>
# Required-Start:     $local_fs $syslog
# Required-Stop:      $local_fs $syslog
# Default-Start:      2 3 4 5
# Default-Stop:       0 1 6
# Short-Description:  <%= @name %>
### END INIT INFO

NAME=<%= @name %>
DESC=<%= @name %>
DAEMON='<%= @binary %>'
DAEMON_ARGS='<%= @args %>'
PIDFILE='/var/run/<%= @name %>.pid'
USER='<%= @user %>'

set -e
. /lib/lsb/init-functions

case "${1}" in
	start)
		log_daemon_msg "Starting ${DESC}" "${NAME}"
		if (start-stop-daemon --start --oknodo --make-pidfile --background --pidfile "${PIDFILE}" --chuid "${USER}" --startas "${DAEMON}" -- ${DAEMON_ARGS}); then
			<% if @nice %>
				timeout --signal=9 1 bash -c "while ! (test -e '${PIDFILE}'); do sleep 0.05; done";
				renice -n <%= @nice %> -p $(cat "${PIDFILE}")
			<%- end %>
			log_end_msg 0
		else
			log_end_msg 1
		fi
	;;
	stop)
		log_daemon_msg "Stopping ${DESC}" "${NAME}"
		if (start-stop-daemon --stop --oknodo --retry TERM/<%= @stop_timeout %>/TERM/<%= @stop_timeout %> --pidfile "${PIDFILE}" --user "${USER}"); then
			rm -f "${PIDFILE}"
			log_end_msg 0
		else
			log_end_msg 1
		fi
	;;
	status)
		status_of_proc -p "${PIDFILE}" "${DAEMON}" "${NAME}"
	;;
	restart)
		${0} stop
		${0} start
	;;
	*)
		echo "Usage: ${0} {start|stop|status|restart}" >&2
	;;
esac

exit 0
